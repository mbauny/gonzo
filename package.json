{
    "name": "gonzo",
    "version": "2.0.0",
    "description": "A static blog engine for GitHub",
    "main": "main.js",
    "repository": "https://github.com/mbauny/gonzo.git",
    "author": "Matthieu BAUNY <github.com/mbauny>",
    "license": "MIT",
    "scripts": {
        "build": "tsc",
        "dev": "tsc-watch --onSuccess 'node dist/main.js --dir=samples'",
        "lint": "eslint .",
        "test": "jest"
    },
    "lint-staged": {
        "**/*.{js,ts}": "eslint --fix"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "pretty-quick --staged && lint-staged --quiet"
        }
    },
    "dependencies": {
        "prettier": "2.4.1",
        "yargs": "17.2.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@types/jest": "27.0.2",
        "@types/node": "16.10.2",
        "@types/yargs": "17.0.3",
        "@typescript-eslint/eslint-plugin": "4.32.0",
        "@typescript-eslint/parser": "4.32.0",
        "eslint": "7.32.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-prettier": "4.0.0",
        "husky": "^4.3.8",
        "jest": "27.2.4",
        "lint-staged": "11.1.2",
        "pretty-quick": "3.1.1",
        "ts-jest": "27.0.5",
        "tsc-watch": "4.5.0",
        "typescript": "4.4.3"
    }
}
