{
    "name": "gonzo",
    "version": "2.0.0",
    "description": "A static blog engine for GitHub",
    "main": "main.js",
    "repository": "https://github.com/mbauny/gonzo.git",
    "author": "Matthieu BAUNY <github.com/mbauny>",
    "license": "MIT",
    "scripts": {
        "build": "tsc",
        "dev": "tsc-watch --onSuccess 'node ./dist/main.js'",
        "lint": "eslint .",
        "test": "jest"
    },
    "lint-staged": {
        "**/*.{js,ts}": "eslint --fix"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "pretty-quick --staged && lint-staged --quiet"
        }
    },
    "dependencies": {
        "yargs": "^16.2.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@types/jest": "^26.0.20",
        "@types/node": "^14.14.22",
        "@types/yargs": "^15.0.12",
        "@typescript-eslint/eslint-plugin": "^4.13.0",
        "@typescript-eslint/parser": "^4.13.0",
        "eslint": "^7.18.0",
        "eslint-config-prettier": "^7.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "husky": "^4.3.8",
        "jest": "^26.6.3",
        "lint-staged": "^10.5.4",
        "prettier": "^2.2.1",
        "pretty-quick": "^3.1.0",
        "ts-jest": "^26.5.0",
        "tsc-watch": "^4.2.9",
        "typescript": "^4.1.3"
    }
}
