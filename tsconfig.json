{
    "compilerOptions": {
        "allowJs": false,
        "alwaysStrict": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "src",
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "lib": ["ESNext"],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "noEmit": false,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "ES2017"
    },
    "include": ["src/**/*.ts", "src/**/*.test.ts"]
}
